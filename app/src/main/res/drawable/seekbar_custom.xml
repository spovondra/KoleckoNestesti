<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" /> <!-- Adjust the radius for rounded corners -->
            <solid android:color="@color/border" /> <!-- Set the background color of the bar -->
        </shape>
    </item>
    <!-- Progress track (set to red) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" /> <!-- Adjust the radius for rounded corners -->
                <solid android:color="@color/iconColor" /> <!-- Set the progress color to red -->
                <size android:height="16dp" /> <!-- Adjust the height to match the SeekBar's height -->
            </shape>
        </clip>
    </item>
</layer-list>
